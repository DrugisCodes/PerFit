
{
  "manifest_version": 3,
  "name": "PerFit",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "options_page": "options.html",
  "description": "Get personalized fit recommendations based on your body measurements",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.zalando.no/*",
    "https://www.zalando.com/*",
    "*://*.zalando.no/*",
    "*://*.zalando.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.zalando.no/*",
        "https://www.zalando.com/*",
        "*://*.zalando.no/*",
        "*://*.zalando.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["*://*.zalando.no/*", "*://*.zalando.com/*"]
    }
  ]
}