
{
  "manifest_version": 3,
  "name": "PerFit",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "default_title": "Click to run PerFit on this page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "description": "Get personalized fit recommendations based on your body measurements",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.zalando.no/*",
    "https://www.zalando.com/*",
    "*://*.zalando.no/*",
    "*://*.zalando.com/*"
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["*://*.zalando.no/*", "*://*.zalando.com/*"]
    }
  ]
}